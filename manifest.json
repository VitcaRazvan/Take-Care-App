{
  "manifest_version": 2,

  "name": "Take care demo app",
  "description": "This extension takes care of you",
  "version": "1.0",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Take care app",
    "default_popup": "popup.html",
    "default_icon": "bbgeye128.png"
  },

  "permissions": ["tabs", "http://*/*", "https://*/*", "file:///*/*"],
  "content_scripts": [
    {
      "matches": ["*://*/*", "file:///*/*"],
      "css": [],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": ["background.css"]
}