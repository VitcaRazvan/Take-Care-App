{
  "manifest_version": 2,

  "name": "Take care demo app",
  "description": "This extension takes care of you",
  "version": "1.0",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Take care app",
    "default_popup": "popup.html"
  },
  "icons": {
    "16" : "bbgeye16.png",
    "48": "bbgeye48.png",
    "128": "bbgeye128.png"
  },
  "permissions": ["tabs", "http://*/*", "https://*/*", "file:///*/*", "storage"],
  "content_scripts": [
    {
      "matches": ["*://*/*", "file:///*/*"],
      "css": ["background.css"],
      "js": ["content.js"]
    }
  ]

}